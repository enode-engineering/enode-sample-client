html
  head
    title Power Company
    style.
      body {
        padding: 1rem;
        font-family: 'Courier New', Courier, monospace;
      }
      h3 {
        margin-top: 4rem;
      }
      img.profile {
        width: 100px;
      }
  body
    h1 üß†‚ö°Ô∏è Power Company
    p You have been signed into a randomly generated user account for testing purposes.
    h3 Authenticated User:
    pre
      | name: #{firstName} #{lastName}
      | id: #{id}
    img.profile(src=image)
    br
    br
    if tokens
      if tokens.refresh_token
        form(action="/refresh" method="post")
          input(type="hidden" name="refreshToken" value=tokens.refresh_token)
          input(type="submit" value="Refresh Tokens")
    a(href="/link")
      button Connect Your Car
    if tokens
      h3 OAuth Tokens
      pre= JSON.stringify(tokens, null, 4)

    if vehicles
      h3 Vehicles
      each vehicle,i in vehicles
        h4=`${vehicle.information.year} ${vehicle.information.brand} ${vehicle.information.model}`
        pre= JSON.stringify(vehicle, null, 4)
    if vehiclesError
      h3 Error fetching vehicles
      pre= vehiclesError
